include ../template
h1 Criar Tarefa
form(action="/tarefa/criar_", method="post")
    label(for="nom") Nome:
    input(type="text", id="nom", name="nom", placeholder="Digite o nome")
    p
    label(for="descricao") Descrição:
    input(type="text", id="descricao", name="descricao", placeholder="Digite a descrição")
    p
     label(for="impotancia") Importancia:
    input(type="number", min="1" max="3" id="impotancia", name="impotancia", placeholder="Digite a descrição")
    p
    button(type="submit" id="criar", name="criar" class="btn btn-outline-primary") Enviar