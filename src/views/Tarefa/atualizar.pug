include ../template
h1  Atualizar Tarefa
p 
    each i in dados.total
        form(action="/tarefa/Atualizar_Tarefa", method="post")
            label(for="nom") Nome:
            input(type="text", id="nom2", name="nom2", placeholder="Digite o nome")
            p
            label(for="descricao") Descrição:
            input(type="text", id="descricao2", name="descricao2", placeholder="Digite a descrição")
            p
            label(for="impotancia") Importancia:
            input(type="number", min="1" max="3" id="impotancia2", name="impotancia2", placeholder="Digite a descrição")
            p
            label(for="email") E-mail:
            input(type="email", id="email2", name="email2", placeholder="Digite o e-mail")
            input(type="number", id="idCo", name="idCo", value=i.getId(),  hidden)
            p
            button(type="submit" class="btn btn-outline-primary") Enviar